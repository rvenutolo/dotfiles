{{- $month := now | date "01" | atoi -}}
{{- $yearShort := now | date "06" | atoi -}}
{{- $version := "" -}}
{{- if le $month 5 -}}
  {{- $version = printf "%d.11" (sub $yearShort 1) -}}
{{- else if eq $month 12 -}}
  {{- $version = printf "%d.11" $yearShort -}}
{{- else -}}
  {{- $version = printf "%d.05" $yearShort -}}
{{- end -}}
{
  # This value determines the Home Manager release that your configuration is
  # compatible with. This helps avoid breakage when a new Home Manager release
  # introduces backwards incompatible changes.
  #
  # You can update Home Manager without changing this value. See the Home
  # Manager release notes for a list of state version changes in each release.
  #
  # https://nixos.wiki/wiki/FAQ/When_do_I_update_stateVersion
  version = "{{ $version }}";
}
